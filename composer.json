{
    "name": "cxsquared/signature",
    "description": "Adds signature support to your Flarum forum.",
    "authors": [
        {
            "name": "Extum",
            "email": "ardacebi1@gmail.com"
        },
        {
            "name": "Katos",
            "email": "Katos@creatorswave.com"            
        },
        {
            "name": "Cxsquared",
            "email": "cxsquared@gmail.com"            
        }
    ],
    "type": "flarum-extension",
    "require": {
        "flarum/core": ">=0.1.0-beta.14 <0.1.0-beta.15",
        "symfony/dom-crawler":"^3.1",
        "symfony/css-selector":"^3.1",
        "fof/components": "^0.2.0"
    },
    "autoload": {
        "psr-4": {
            "XEngine\\Signature\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Signature",
            "icon" : {
                "name" : "fas fa-pen-square",
                "backgroundColor" : "#000",
                "color": "#DC3522"
            }
        }
    }
}
